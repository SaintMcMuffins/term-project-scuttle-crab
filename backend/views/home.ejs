  <body>
    <!-- Navbar (sit on top) -->
    <% if (loggedIn) { %>
  <div id="chat-container">
      <p id="chat">Chat</p>
      <div id="messages">
      </div>

      <label>
        <input
          id="chat__message"
          name="chat-message"
          placeholder="Type a message..."
        />
      </label>
  </div>
  <%} else {%>
      <p id="chat">Chat</p>
      <div id="messages">
      </div>
    <input
    id="chat__message"
    name="chat-message"
    placeholder="Sign in to chat!"
  />
    <% } %>   
<div class="bigRectangle">
  <div class="innerRectangle">
    <% if (loggedIn) { %>
    <h1>Hi <%= username %></h1>
    <div class="gameblock">
      <div class="gamebuttons">
        <a href="/creategame" class="button">CREATE GAME</a>
        <a href="/findgame" class="button">JOIN GAME</a>
        </div>
      </div>
    <%} else {%>
    <h1>Sign in to play!</h1>
    <div class="loginButton"><a href="/login" class="button" id="loginButton">Login</a>  
    <% } %>                                                 </div>
  </div>
</div>
</div>


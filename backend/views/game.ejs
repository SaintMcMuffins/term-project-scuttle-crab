<!DOCTYPE html>
<html>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!--npm install socket.io-client-->

  <head>
    <title><%= title %></title>
    <script type="module" src="/scripts/bundle.js" defer></script>
        <link rel="stylesheet" type="text/css" href="/game.css" />
    <%- include('header') %>
  </head>

  <body>
    <!-- Navbar (sit on top) -->

    <div class="parent-container">
      <!-- Chat area -->
      <div class="chat-area">
        <div class="chat-box">
          <div id="chat-container">
            <p id="chat">Chat</p>
            <div id="messages"></div>
            <label>
              <input
                id="chat__message"
                name="chat-message"
                placeholder="Type a message..."
              />
            </label>
          </div>
        </div>
      </div>
      
      <!-- UI area -->
      <div class="ui-area">
        <!-- UI area content goes here -->
        <div class="ui-container">
          <button style="--clr:#39FF14" class="b1"><span>Draw</span><i></i></button>
          <button style="--clr:#FF44CC" class="b2"><span>Discard</span><i></i></button>
          <button style="--clr:#0FF0FC" class="b3"><span>Meld</span><i></i></button>
          <button style="--clr:#8A2BE2" class="b4"><span>Knock</span><i></i></button>
        </div>
      </div>
      <!-- UI area -->
      <div class="spacing-area">
        <div class="spacing-container"></div>
      </div>

      
      <!-- Game container -->
      <div class="game-container">
        <div class="board">
          <div class="card-area">
            <!-- Card area content goes here -->
            <div class="pile" id="card<%= discard_top %>"></div>
            
            <!-- First player's card hand content goes here -->
            <% hand.forEach(function(c) { %>
              <div class="p1-item" id="card<%= c %>"></div>
            <% }); %>
      
            <!-- Second player's card hand content goes here -->
            <div class="p2-item" id="card0"></div>
            <div class="p2-item" id="card0"></div>
            <div class="p2-item" id="card0"></div>
            <div class="p2-item" id="card0"></div>
            <div class="p2-item" id="card0"></div>
            <div class="p2-item" id="card0"></div>
            <div class="p2-item" id="card0"></div>
            <div class="p2-item" id="card0"></div>
            <div class="p2-item" id="card0"></div>
            <div class="p2-item" id="card0"></div>
            <div class="p2-item" id="card0"></div>
          </div>
        </div>
      </div>
      </div>
    </div>
    
  </body>
</html>
